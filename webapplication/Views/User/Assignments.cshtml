@{
}
@model IEnumerable<Assignment>

@{
    ViewData["Title"] = "Assignments";
}

<h2>Assignments</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.FileName</td>
                <td>
                    <a asp-action="DownloadAssignment" asp-route-id="@assignment.Id" class="btn btn-primary">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
